<!-- res/drawable/rectangle_border.xml -->
<shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
    <solid android:color="@android:color/white" /> <!-- Màu nền của thành phần -->
    <padding
        android:left="10dp"
        android:right="10dp"
        android:top="10dp"
        android:bottom="10dp" /> <!-- Khoảng cách padding -->
    <stroke
        android:width="1dp"
        android:color="#CCCCCC" /> <!-- Màu và độ rộng của viền -->
</shape>
